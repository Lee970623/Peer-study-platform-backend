<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.elec5619.peerhelping.domain.UsersEntity" table="users" schema="peerhelping">
        <id name="sid">
            <column name="sid" sql-type="int"/>
        </id>
        <property name="firstName">
            <column name="first_name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>