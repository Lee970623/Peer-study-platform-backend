<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.elec5619.peerhelping.domain.CoursesEntity" table="courses" schema="peerhelping">
        <id name="courseId" column="courseId"/>
        <property name="name" column="name"/>
        <property name="description" column="description"/>
        <property name="courseCode" column="courseCode"/>
        <set name="interestedinsByCourseId" inverse="true">
            <key>
                <column name="courseId"/>
            </key>
            <one-to-many not-found="ignore" class="org.elec5619.peerhelping.domain.InterestedinEntity"/>
        </set>
        <set name="matchesByCourseId" inverse="true">
            <key>
                <column name="courseId"/>
            </key>
            <one-to-many not-found="ignore" class="org.elec5619.peerhelping.domain.MatchesEntity"/>
        </set>
    </class>
</hibernate-mapping>